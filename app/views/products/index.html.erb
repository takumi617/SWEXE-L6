<h1>商品一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price, unit: "￥", precision: 0) %></td>
        <td>
          <%= button_to 'カートに追加', cart_items_path(product_id: product.id), method: :post %>
        </td>
        <td>
          <%= button_to '削除', product_path(product), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '商品を新規登録する', new_product_path %>