<h1>ショッピングカート</h1>

<% if @cart.cart_items.empty? %>
  <p>カートは空です。</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart.cart_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= number_to_currency(item.product.price, unit: "円", precision: 0) %></td>
          <td><%= item.quantity %></td>
          <td><%= number_to_currency(item.total_price, unit: "円", precision: 0) %></td>
          <td>
            <%= button_to '削除', cart_item_path(item), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>合計金額: <%= number_to_currency(@cart.total_price, unit: "円", precision: 0) %></h3>
<% end %>
<br>
<%= link_to '商品一覧に戻る', products_path %>